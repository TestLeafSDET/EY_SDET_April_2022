curl -i -H "Accept:application/json" -H "Content-Type:application/json" -H "Authorization: Bearer ACCESS-TOKEN" -XPOST "https://gorest.co.in/public/v2/users" -d '{"name":"Tenali Ramakrishna", "gender":"male", "email":"tenali.ramakrishna@15ce.com", "status":"active"}'


curl -i -H "Accept:application/json" -H "Content-Type:application/json" -H "Authorization: Bearer 31270062a4adc492f10c78cb6dd985349194cb06b68f34f4c217c52e2760a3c6" -XPATCH "https://gorest.co.in/public/v2/users/4" -d '{"name":"Allasani Peddana", "email":"allasani.peddana@15ce.com", "status":"active"}'

curl -i -H "Accept:application/json" -H "Content-Type:application/json" -H "Authorization: Bearer 31270062a4adc492f10c78cb6dd985349194cb06b68f34f4c217c52e2760a3c6" -XDELETE "https://gorest.co.in/public/v2/users/4"

